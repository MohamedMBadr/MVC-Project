@model RgisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="Register" method="post">
			<div asp-validation-summary="All"></div>

			<input class="text w3lpass " asp-for="FName" placeholder="FirstName" required="">
			<input class="text w3lpass" asp-for="LName" placeholder="LastName" required="">
			<input class="text w3lpass" asp-for="Email" placeholder="Email" required="">
			<input class="text w3lpass" asp-for="Password" placeholder="Password" required="">
			<input class="text w3lpass" asp-for="ConfirmPasswod" placeholder="Confirm Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="IsAgree" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNUP">
		</form>
		<p>Don't have an Account? <a asp-action="Login" > Login Now!</a></p>
	</div>
</div>


@section ValidationScriptSection{
	<partial name="_ValidationScriptsPartial" />
}



